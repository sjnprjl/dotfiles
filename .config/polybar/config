;background = ${colors.primary}
foreground = ${colors.foreground}
border-bottom-size = 2

padding=4
font-0 = CaskaydiaCove Nerd Font:size=9;1
font-1 = Noto Color Emoji;size=9;1



modules-left = sepl launcher sepr sepl bspwm sepr sepl xwindow sepr
modules-center = sepl time  sepr
modules-right = sepl checkupdate sepr sepl cpu sepr sepl memory sepr sepl wlan sepr sepl backlight sepr sepl pulseaudio sepr

scroll-up = bspwn-wsnext
scroll-down = bspwn-wsprev

