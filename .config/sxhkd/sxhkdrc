# terminal emulator
super + Return
    $TERMINAL

# display books list
super + b 
    books.sh

#lockscreen
super + l
    betterlockscreen -l dimblur

# screenshot
super + s
    flameshot;flameshot gui

# program launcher
super + shift + g
    dmenu_

super + shift + f 
    font-preview.sh

#browser
super + period
    $BROWSER

super + shift + p
    pgrep picom && pkill picom || picom -b

#toggle notion-app
super + p
    scratchpad.sh notion-app --take-first
super + a
    scratchpad.sh Alacritty alacritty
super + d
    scratchpad.sh discord discord

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'

#mute volume
XF86AudioMute
    volume-control.sh mute

#increase volume
XF86AudioLowerVolume
    volume-control.sh down 1
#decrease volem
XF86AudioRaiseVolume
    volume-control.sh up 1
    
#brightness adjust
XF86MonBrightnessDown
    bright-control.sh down 5
XF86MonBrightnessUp
    bright-control.sh up 5

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}


# close/kill
super + shift + {w, q}
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# Hide/Unhide Window
super + {_, shift +} n
    {shownode, hidenode}

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# focus/swap
#

 ##focus the node in the given direction
#super + {h,j,k,l}
    #bspc node -f {west,south,north,east}

# rotate windows
super + shift + {h,t} 
    bspc node @/ -C {forward, backward}

# focus the next/previous window in the current desktop
super + {_,shift + }Tab
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + ctrl + {grave,Tab}
	bspc {node,desktop} -f last


# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Switch workspace
ctrl + alt + {Left,Right}
    bspc desktop -f {prev.local,next.local}
#
# preselect
#
# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

#Pseudo Tiled & tiled mode
#super + {p,t}
    #bspc node -t {pseudo_tiled,tiled}

 #preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# Move current window to a pre-selected space
super + ctrl + m
    bspc node -n last.!automatic

## preselect the ratio
#super + ctrl + {1-9}
	#bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

## cancel the preselection for the focused desktop
#super + ctrl + shift + space
	#bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

##
# move/resize
#

# Expanding windows
super + control + {Left,Right,Up,Down}
    bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}

## Shrinking windows
super + alt + {Left,Right,Up,Down}
    bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-100 0,0 100,0 -100,100 0}

 # Expand/contract a window by moving one of its side outward/inward
super + o : {h,j,k,l}
    STEP=20; SELECTION={1,2,3,4}; \
   bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)   

# Change wallpaper
super + c
    random-wallpaper


